{
  "name": "zodiac",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/ui",
    "packages/presets",
    "packages/contracts"
  ],
  "description": "Zodiac-themed platform monorepo",
  "scripts": {
    "dev:web": "bun --cwd apps/web dev",
    "dev:admin": "bun --cwd apps/backoffice dev",

    "build:web": "bun --cwd apps/web build",
    "build:admin": "bun --cwd apps/backoffice build",
    "build": "bun run build:web && bun run build:admin",

    "lint:web": "bun --cwd apps/web lint",
    "lint:admin": "bun --cwd apps/backoffice lint",
    "lint": "bun run lint:web && bun run lint:admin"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.1.38",
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
